programa
{
	inclua biblioteca Matematica --> mat
	
	funcao inicio()
	{
		inteiro a,b,c
		real d,r,s

		escreva("\nEntre com o valor de A: ")
		leia(a)
		escreva("\nEntre com o valor de B: ")
		leia(b)
		escreva("\nEntre com o valor de C: ")
		leia(c)
		r = mat.potencia((a+b),2.0)
		s = mat.potencia((b+c),2.0)
		d = (r+s) / 2

		escreva("\nO valor de D foi: ",d)

	}
}